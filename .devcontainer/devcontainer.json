{
  "name": "LLM Evaluation",
  "image": "mcr.microsoft.com/devcontainers/python:3.12",

  "postCreateCommand": "pip install -r requirements.txt",

  // Forward credentials from host environment variables
  "remoteEnv": {
    "GOOGLE_API_KEY": "${localEnv:GOOGLE_API_KEY}",
    "AWS_ACCESS_KEY_ID": "${localEnv:AWS_ACCESS_KEY_ID}",
    "AWS_SECRET_ACCESS_KEY": "${localEnv:AWS_SECRET_ACCESS_KEY}",
    "AWS_DEFAULT_REGION": "${localEnv:AWS_DEFAULT_REGION}",
    // Also support AWS profile-based auth
    "AWS_PROFILE": "${localEnv:AWS_PROFILE}"
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "ms-toolsai.jupyter"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "editor.formatOnSave": true,
        "[python]": {
          "editor.defaultFormatter": "ms-python.black-formatter"
        }
      }
    }
  },

  "mounts": [
    // Mount AWS credentials file if present on the host
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.aws,target=/root/.aws,type=bind,consistency=cached,readonly"
  ],

  "features": {
    "ghcr.io/devcontainers/features/aws-cli:1": {}
  }
}
